enum {
	Cr,
	Va,
	Si,
	Br,
	Bu,
	Pi,
};

float random() {
	float r = rand() % 10;
	if (r == 0)
		return 0;
	else
		return 1 / r;
}

float traseu[10][10]{};
int listaTabu[10][10]{};
int nrlista = 0;
int nrfurnici = 5;

bool verificat(int i, int j, int n,int val) {
	for (int j = 0; j <= n; j++) {
		if (listaTabu[i][j] == val)
			return false;
	}
	return true;
}

void print() {
	for (int i = 0; i <= Pi; i++) {
		for (int j = 0; j <= Pi; j++) {
			std::cout << traseu[i][j] << " | ";
		}
		std::cout << std::endl;
	}
}

